# Ara-infra Environment Configuration
# Copy this file to .env and customize the values

# ===========================================
# JWT Configuration (shared across services)
# ===========================================
# IMPORTANT: Use a secure random string of at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# JWT issuer (optional)
JWT_ISSUER=ara-platform

# JWT audience (optional)
JWT_AUDIENCE=ara-services

# ===========================================
# Database Configuration
# ===========================================
# Backend (PHP/Symfony) database
POSTGRES_DB=symfony
POSTGRES_USER=symfony
POSTGRES_PASSWORD=symfony

# Chat service database (isolated from backend)
CHAT_POSTGRES_DB=ara_chat

# ===========================================
# Application Mode
# ===========================================
APP_ENV=dev
APP_DEBUG=1

# ===========================================
# Notification Service
# ===========================================
# Log level: trace, debug, info, warn, error
RUST_LOG=info

# Enable features (set to true/false)
QUEUE_ENABLED=false
ACK_ENABLED=false
RATELIMIT_ENABLED=false
TENANT_ENABLED=false
CLUSTER_ENABLED=false

# ===========================================
# Backup Service Configuration
# ===========================================
# Retention period for local backups (days)
BACKUP_RETENTION_DAYS=7

# Cron schedule for automated backups (default: 2 AM daily)
BACKUP_SCHEDULE=0 2 * * *

# Run backup immediately on container start
BACKUP_ON_START=false

# Timezone for backup scheduling
TZ=UTC

# ===========================================
# S3 Backup Configuration (Optional)
# ===========================================
# Enable S3 backup upload
S3_BACKUP_ENABLED=false

# S3 bucket name for backups
S3_BACKUP_BUCKET=

# S3 key prefix for backup files
S3_BACKUP_PREFIX=backups

# AWS credentials (required if S3_BACKUP_ENABLED=true)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
