# Ara-infra Environment Configuration
# Copy this file to .env and customize the values

# ===========================================
# JWT Configuration (shared across services)
# ===========================================
# IMPORTANT: Use a secure random string of at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# JWT issuer (optional)
JWT_ISSUER=ara-platform

# JWT audience (optional)
JWT_AUDIENCE=ara-services

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=symfony
POSTGRES_USER=symfony
POSTGRES_PASSWORD=symfony

# ===========================================
# Application Mode
# ===========================================
APP_ENV=dev
APP_DEBUG=1

# ===========================================
# Notification Service
# ===========================================
# Log level: trace, debug, info, warn, error
RUST_LOG=info

# Enable features (set to true/false)
QUEUE_ENABLED=false
ACK_ENABLED=false
RATELIMIT_ENABLED=false
TENANT_ENABLED=false
CLUSTER_ENABLED=false
